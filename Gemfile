source 'http://rubygems.org'

# Core
gem 'sinatra', '~> 1.4.6', require: false
gem 'sinatra-contrib', require: false
gem 'require_all'
gem 'rake'

# Use cassandra as primary database
gem 'cassandra-driver'

# Use pry as an awesome debugger tool
gem 'pry'

# Use active model for validation and error handeling
gem 'activemodel'
gem 'activesupport'


# Json Web Token
gem 'jwt'
# Use Thin as webserver
gem 'thin'


group :development do
  # Debugging is easy, sinatra interactive console
  gem 'racksh'
end

group :test do

  gem 'rspec'
  gem 'rack-test'

end